<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.phonegap.yooquiero"
        version     = "1.0.0" >

    <name>GetPlan</name>

    <description>
        Esta te permite crear y armar planes con tus amigos. 
    </description>

    <author href="https://build.phonegap.com" email="jsbeleno@gmail.com">
        Equipo YoQuiero
    </author>
	
    <access origin="*" />

	<icon src="img/logo.png" />
	
	<preference name="permissions" value="none" />
	
	<preference name="orientation" value="portrait" />

    <gap:config-file platform="android" parent="/manifest/application" >
       <activity android:screenOrientation="portrait" android:configChanges="orientation" />
    </gap:config-file>
	
	<gap:plugin name="org.apache.cordova.device" />
    <gap:plugin name="com.phonegap.plugins.pushplugin" version="2.4" />
    <gap:plugin name="org.apache.cordova.dialogs"/>
    <gap:plugin name="org.apache.cordova.inappbrowser"/>
    <gap:plugin name="com.phonegap.plugins.facebookconnect" version="0.8.0">
        <param name="APP_ID" value="963337857046301" />
        <param name="APP_NAME" value="YooQuiero" />
    </gap:plugin>
</widget>